// -define:USE_TRACKING_ALLOCATOR=true|false
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "odin",
			"args": [
				"build",
				".",
				"-strict-style", // Enforce strict style guideline
				"-vet", // Run static analysis (finds unused vars, dead code, etc.
				"-warnings-as-errors", // Treat warnings as errors to keep code clean
				"-out:bin/phyons.exe", // Specify output binary location
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [],
		},
		{
			"label": "release",
			"type": "shell",
			"command": "odin",
			"args": [
				"build",
				".",
				"-strict-style", // Enforce strict style guideline
				"-vet", // Run static analysis (finds unused vars, dead code, etc.
				"-warnings-as-errors", // Treat warnings as errors to keep code clean
				"-show-timings", // Show build timing informatio
				"-o:size", // Optimize for size
				"-no-bounds-check", // Remove bounds checking for performance
				"-disable-assert", // Remove asserts for performance
				"-define:EMBED_SHADERS=true", // Embed shaders into the executable
				"-out:bin/phyons.exe", // Specify output binary location
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [],
		},
		{
			"label": "run",
			"type": "shell",
			"command": "odin",
			"args": [
				"run",
				".",
				"-strict-style", // Enforce strict style guideline
				"-vet", // Run static analysis (finds unused vars, dead code, etc.
				"-warnings-as-errors", // Treat warnings as errors to keep code clean
				"-out:bin/phyons.exe", // Specify output binary location
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": [],
		},
	]
}